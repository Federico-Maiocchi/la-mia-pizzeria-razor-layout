    static int SumInt(int n)
    {
        return n + 5;
    };

    // es 3.
    //string phrase = "nel mezzo del cammin di nostra vita";

    static int CountCharA(string phrase)
    {
        int count = 0;

        foreach (char charA in phrase)
        {
            if (charA == 'a')
            {
                count++;
            }
        }

        return count;
    }

    // es 4.

    List<int> GenerateNumberRandom()
    {
        Random rnd = new Random();
        List<int> listIntRandom = new List<int>();

        for (int i = 0; i < 20; i++)
        {
            listIntRandom.Add(rnd.Next(1, 90 + 1));
        }

        List<int> listFilteredNumbers = new List<int>();
        foreach (int number in listIntRandom)
        {
            if (number >= 20 && number <= 70)
            {
                listFilteredNumbers.Add(number);
            }
        }

        return listFilteredNumbers;
    }

    //Console.WriteLine(string.Join(", ", GenerateNumberRandom()));

