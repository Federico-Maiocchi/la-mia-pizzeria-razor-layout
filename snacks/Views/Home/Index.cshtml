    DateTime dateNow = DateTime.Now;

    string convertStringDateNow = dateNow.ToString("yyyy-MM-dd HH:mm:ss");


    // es 6. 

    DateTime date7DaysAGo = dateNow.AddDays(-7);

    string today = dateNow.ToString("dddd");

    DateTime inAYear = dateNow.AddYears(1);

    string nameDayNextYear = inAYear.ToString("dddd");



}

